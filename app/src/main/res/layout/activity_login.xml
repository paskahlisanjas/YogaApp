<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_authorization"
    tools:context=".authorization.LoginActivity">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/daun2"
        android:scaleX="-1"
        android:rotation="33"/>

    <ImageView
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="100dp"
        android:rotation="5"
        android:src="@drawable/daun"/>

    <ImageView
        android:layout_marginTop="85dp"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/tulang"/>

    <Button
        android:id="@+id/button_masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/label_buat_akun"
        android:background="@color/authorizationButtonBg"
        android:textColor="#FFF"
        android:text="masuk" />

    <TextView
        android:id="@+id/label_buat_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:layout_marginTop="10dp"
        android:text="Tidak punya akun? Buat akun." />

</RelativeLayout>