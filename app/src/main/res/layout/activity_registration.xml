<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".authorization.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:text="DAFTAR"
            android:textColor="#2f8f86"
            android:textSize="18pt" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#9e9e9e"
            android:gravity="center_horizontal"
            android:hint="Name"
            android:textColor="#18b792"
            android:textColorHint="#18b792" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#9e9e9e"
            android:gravity="center_horizontal"
            android:hint="Email"
            android:textColor="#18b792"
            android:textColorHint="#18b792" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#9e9e9e"
            android:gravity="center_horizontal"
            android:hint="Password"
            android:textColor="#18b792"
            android:textColorHint="#18b792" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_edge_curved"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="DAFTAR"
            android:textColor="#fff" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_exit_pendaftaran"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="exitPendaftaranButtonOnClick"
        android:padding="15dp"
        android:src="@drawable/ic_cancel" />
</RelativeLayout>